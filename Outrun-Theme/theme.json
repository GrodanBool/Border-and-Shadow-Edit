{
  "name": "Outrun Theme",
  "version": "v1.0",
  "author": "GrodanBool",
  "target": "System-Wide",
  "description": "Edits the colors of the Steam Deck interface to a few predetermined colors, matching the outrun or cyberpunk colorscheme",
  "inject": {
    "shared.css": [ "SP", "QuickAccess", "MainMenu" ]
  },
  "manifest_version": 3,
  "patches": {
    "Theme Color 1": {
      "default": "Cyan",
      "type": "dropdown",
      "values": {
        "White": {
          "colors/color1/white.css": [ "SP", "QuickAccess", "MainMenu" ]
        },
        "Cyan": {
          "colors/color1/cyan.css": [ "SP", "QuickAccess", "MainMenu" ]
        },
        "Pink": {
          "colors/color1/pink.css": [ "SP", "QuickAccess", "MainMenu" ]
        },
        "Red": {
          "colors/color1/red.css": [ "SP", "QuickAccess", "MainMenu" ]
        },
        "Yellow": {
          "colors/color1/yellow.css": [ "SP", "QuickAccess", "MainMenu" ]
        }
      }
    },
    "Theme Color 2": {
      "default": "Pink",
      "type": "dropdown",
      "values": {
        "White": {
          "colors/color2/white.css": [ "SP", "QuickAccess", "MainMenu" ]
        },
        "Cyan": {
          "colors/color2/cyan.css": [ "SP", "QuickAccess", "MainMenu" ]
        },
        "Pink": {
          "colors/color2/pink.css": [ "SP", "QuickAccess", "MainMenu" ]
        },
        "Red": {
          "colors/color2/red.css": [ "SP", "QuickAccess", "MainMenu" ]
        },
        "Yellow": {
          "colors/color2/yellow.css": [ "SP", "QuickAccess", "MainMenu" ]
        }
      }
    }
  }
}
